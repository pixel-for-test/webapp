@page
@model IndexModel
@{
    ViewData["Title"] = "Kolkata Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
        }
    </style>
</head>
<body class="bg-gray-100 text-gray-800">
    <div class="container mx-auto p-4 md:p-8">
        <div class="max-w-4xl mx-auto bg-white rounded-xl shadow-lg p-8">
            
            <!-- Header -->
            <div class="text-center mb-8">
                <h1 class="text-4xl md:text-5xl font-bold text-gray-900">Hello, Kolkata!</h1>
                <p class="text-gray-500 mt-2">@Model.CurrentDateTime</p>
            </div>

            <!-- Main Content Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

                <!-- Weather Section -->
                <div class="bg-gray-50 rounded-lg p-6 flex flex-col items-center justify-center text-center">
                    <h2 class="text-2xl font-semibold mb-4">Current Weather</h2>
                    <div class="mb-4">
                        @Html.Raw(Model.WeatherShape)
                    </div>
                    <p class="text-xl font-medium">@Model.Temperature</p>
                    <p class="text-gray-600">@Model.WeatherDescription</p>
                </div>

                <!-- Quote Section -->
                <div class="bg-gray-50 rounded-lg p-6 flex flex-col items-center justify-center text-center">
                    <h2 class="text-2xl font-semibold mb-4">Quote of the Moment</h2>
                    <blockquote class="text-lg italic text-gray-700">
                        "@Model.CurrentQuote"
                    </blockquote>
                </div>
            </div>

            <!-- Trending Topics Section -->
            <div class="mt-8">
                <h2 class="text-2xl font-semibold text-center mb-6">Trending in Kolkata</h2>
                <div class="space-y-4">
                    @foreach (var topic in Model.TrendingTopics)
                    {
                        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded-r-lg">
                            <p class="text-gray-800">@topic</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</body>
</html>
